@using System
@using Sandbox;
@using Sandbox.MenuSystem;
@using Sandbox.UI;
@inherits Panel;
@using Sandbox.UI.GameMenu
@attribute [StyleSheet]

<root class="@SpecialClasses()" tooltip="@Member.Name" style="background-image: url( avatar:@Member.Id )">
</root>

@code
{
    public Friend Member { get; set; }

    string SpecialClasses()
    {
        if (Member.IsMe) return "is-me";
        if (Member.IsFriend) return "is-friend";

        return "";
    }
}
