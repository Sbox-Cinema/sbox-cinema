@using System
@using Sandbox;
@using Sandbox.MenuSystem;
@using Sandbox.UI;
@inherits ActivePage;
@using Sandbox.UI.GameMenu

<root style="flex-direction: column; flex-shrink: 0; flex-grow: 1;">

    <div class="navbar">
        <div class="left">
            <a class="button" href="/"> Home </a>
            <span class="block">&gt;</span>
            <a class="button" href="/active">Current Game</a>
            <span class="block">&gt;</span>
            <a class="block">Change Map</a>
        </div>
        <div class="right">
        </div>
    </div>

    <PackageList ShowFilters="@true" style="padding-bottom: 50px;" Query="type:map sort:trending" OnSelected="@OnPackageSelected" Take=@(50)></PackageList>

</root>

@code
{
    void OnPackageSelected( Package package )
    {
        Game.Menu.ChangeServerMap(package.FullIdent);
        this.Navigate( "/active" );
    }
}
