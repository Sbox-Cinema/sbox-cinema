@inherits Panel
@using Sandbox;
@using Sandbox.UI;

@namespace Cinema.UI

@attribute [StyleSheet("ui/movie-queue/MovieQueue.scss")]
<root class="@VisibleClass">
    <div class="placement container">
        <div class="header">
            <div class="title">
                Media Player
            </div>
            <div class="close-btn button" @onclick=@OnClose>
                Close
            </div>
        </div>
        <div class="contents">
            <div class="section outline">
                <div class="add-queue-container">
                    <div class="title">
                        Add To Queue (Youtube ID):
                    </div>
                    <TextEntry @ref=MovieIDEntry CaretColor="#555" />
                    <div class="button" @onclick=@OnQueue >
                        Add
                    </div>
                </div>
            </div>
            <div class="section clear grow scroll">
                <div class="rows scrollable">
                    @foreach (var movie in Queue)
                    {
                                                            <div class="row">
                                                                <div class="title">
                                                                <div class="text">@movie.Title</div>
                                @* @if(movie.LocalClientCanRemove) {
                                    <div class="button fit small">X</div>
                                } *@
                                                                </div>
                                                                <div class="duration">
                                @movie.DurationFormatted
                                                                </div>
                                                                <div class="requestor">
                                @movie.Requestor.Name
                                                                </div>
                                                                <div class="voting-buttons">
                                                                    <div class="button like">+1</div>
                                                                    <div class="button dislike">-1</div>
                                                                </div>
                                                            </div>
                    }
                </div>
            </div>
            <div class="section outline as-rows">
                @if (NowPlaying != null)
                {
                                                        <div class="now-playing-block">
                                                            <div class="stats">
                                                                <div class="thumbnail"> </div>
                                                                <div class="details">
                                                                    <div class="title">
                                    @NowPlaying.Title
                                                                    </div>
                                                                    <div class="time">
                                    @NowPlayingTimeString
                                                                    </div>
                                                                    <div class="requestor">
                                    @NowPlaying.Requestor.Name
                                                                    </div>
                                                                    <div class="voting-buttons">
                                                                        <div class="button like">Like</div>
                                                                        <div class="button dislike">Dislike</div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                }
                <div class="admin-control-bar">
                    <div class="header">
                        Admin
                    </div>
                    <div class="controls">
                        <div class="button" @onclick=@OnSkip>
                            Skip Current Movie
                        </div>
                    <div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <div class="footer">

    </div>
    </div>
</root>