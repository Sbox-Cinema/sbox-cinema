@using System;
@using System.Collections.Generic;
@using CinemaTeam.Plugins.Video;
@using Sandbox;
@using Sandbox.UI;
@using Cinema;

@namespace Cinema.UI
@inherits Panel
@attribute [StyleSheet]

<root>
    @foreach (var provider in Providers)
    {
        <VideoProviderIcon Provider=@provider @onclick=@(_ => OnClickedProvider(provider))/>
    }
</root>