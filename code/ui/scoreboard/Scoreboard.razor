@using System.Collections.Generic;

@namespace Cinema.UI

<style>
	Scoreboard {
	position: absolute;
	width: 100%;
	height: 100%;
	background-color: rgba(0,0,0,0);
	opacity: 0;
	pointer-events: none;
	z-index: 1000;

	.container {
		flex-direction: column;
		width: 100%;
		height:100%;
		overflow-y: scroll;

		header {
			width: 100%;
			height: 120px;
			align-items: center;
			background-color: rgba(0,0,0,0.8);

			label {
				color: white;
				left: 16px;
				font-size: 40px;
			}
		}

		.canvas {
			color: white;
			width: 80%;
			height: 100%;
			margin: 24px auto;
			padding: 12px 0;

			background-color: rgba(0.0, 0.0, 0.0, 0.6);

			.scrollpanel {
				width: 100%;
				height: 100%;
				overflow-y: scroll;
				padding: 12px;
				padding-top: 0px;
				flex-direction: column;

				.row {
					background-color: rgba(0.0, 0.0, 0.0, 0.6);
					padding: 22px;
					margin-bottom: 4px;

					label {
						font-size: 21px;
						position: absolute;
						top: 50%;
						transform: translateY(-50%);
							
						&.name {
							left: 12px;
						}

						&.ping {
							right: 12px;
						}
					}
				}
			}
		}

		.footer {
			width: 100%;
			height: 120px;
			background-color: rgba(0,0,0,0.8);
		}
	}

	&.visible {
			opacity: 1;
			pointer-events: all;
		}
	}
</style>

<root class="@VisibleClass">
	<div class="container">
		<header>
			<label>@Name</label>
		</header>

		<div class="canvas">
			<div class="scrollpanel">
				@foreach (var client in Clients)
				{
					<div class="row">
						<label class="name">@client.Name</label>
						<label class="ping">@client.Ping</label>
					</div>
				}
			</div>
		</div>

		<div class="footer">

		</div>
	</div>
</root>