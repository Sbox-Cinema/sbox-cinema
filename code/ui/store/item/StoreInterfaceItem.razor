@namespace Cinema.UI

<style>
	StoreInterfaceItem {
		width: 100%;
		height: 100%;

		min-width:	64px;
		min-height: 64px;
		max-height: 192px;
		max-width: 192px;

		background-color: rgba(0,0,0,0.8);

		border-radius: 8px;
		
		.icon
		{
			width: 100%;
			height: 100%;
		}

		&:hover {
			border: 2px solid white;
		}
	}
</style>

<root>
	<img class="icon" src=@Item.Icon />
</root>

@code
{
	public StoreItem Item { get; set; }
}


